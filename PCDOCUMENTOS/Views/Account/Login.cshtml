@model PCDOCUMENTOS.Models.LoginUsuarios



@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        Iniciar Sesion
                    </h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.usuario, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.claveacceso, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.claveacceso, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            @Html.ValidationMessageFor(model => model.claveacceso, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary w-100" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
